<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ig_icon_return_two"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_return" />

        </LinearLayout>
        <TextView
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="恭喜你"/>
        <TextView
            android:padding="10dp"
            android:id="@+id/tv_hobby_enter_quan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:text="成功加入读书圈"/>

        <TextView
            android:padding="10dp"
            android:id="@+id/tv_hobby_enter_quan_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="书中自由颜如玉\n书中自由黄金屋"/>

        <TextView
            android:padding="10dp"
            android:id="@+id/tv_hobby_enter_quan_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:text="读书是获取知识的最好方式"/>
        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="加油!"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/hobby_read"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_enter_things"
            android:layout_marginTop="10dp"
            android:layout_width="280dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button"
            android:text="查看要事"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>