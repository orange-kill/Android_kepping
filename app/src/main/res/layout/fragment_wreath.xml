<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.wreath.WreathFragment"
    android:background="@drawable/flower_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp">
            <ImageView
                android:id="@+id/iv_f1"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/flower1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp">
            <ImageView
                android:id="@+id/iv_f2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/flower2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="195dp">
            <ImageView
                android:id="@+id/iv_f3"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/flower3"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="275dp">
            <ImageView
                android:id="@+id/iv_f4"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/flower4"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp">
            <ImageView
                android:id="@+id/iv_f5"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/flower5"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="200dp">
            <ImageButton
                android:id="@+id/iv_pick"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/pick" />
            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/iv_pick"
                android:src="@drawable/basket" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>