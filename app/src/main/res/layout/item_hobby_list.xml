<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:layout_margin="20dp"
        tools:ignore="MissingConstraints"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/ig_hobby"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/hobby_read" />

        <TextView
            android:id="@+id/tv_hobby_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ig_hobby"
            android:text="读书圈儿"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hobby_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hobby_title"

            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@id/ig_hobby"
            android:text="书中自有黄金屋 书中自有颜如玉"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_hobby_details_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hobby_sign"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/ig_hobby"
            android:text="1567人参加 ｜ 20.3k条动态"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_hobby_details_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hobby_details_one"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/ig_hobby"
            android:text="帮助954人养成读书习惯"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_hobby_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hobby_details_two"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/ig_hobby"
            android:text="奖金池"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_hobby_pay_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hobby_details_two"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/tv_hobby_pay"
            android:text="¥1567"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:textSize="20sp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>