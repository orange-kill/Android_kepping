<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_rectangle"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/rl_content_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ig_hobby"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/hobby_read" />

            <TextView
                android:id="@+id/tv_hobby_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/ig_hobby"
                android:text="读书圈儿"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_hobby_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hobby_title"

                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@id/ig_hobby"
                android:text="书中自有黄金屋 书中自有颜如玉"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_hobby_details_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hobby_sign"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/ig_hobby"
                android:text="2km内有125人参加"
                android:textSize="15sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/hobby_near_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_content_one"
            android:background="@color/black"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hobby_near_line"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/hobby_near_people"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/hobby_read"/>
                <TextView
                    android:id="@+id/near_people_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/hobby_near_people"
                    android:text="人名"/>

                <ImageView
                    android:id="@+id/hobby_near_icon_place"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/hobby_near_people"
                    android:layout_marginLeft="220dp"
                    android:src="@drawable/position" />

                <TextView
                    android:layout_toRightOf="@id/hobby_near_icon_place"
                    android:id="@+id/near_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="1.7km"/>

            </RelativeLayout>


        </RelativeLayout>




    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>